        </p>
    }


    @if (Model.Accomplishments == true)
    {
        <p>
            A career highlight.
        </p>
        <p>
            Your favorite boss or colleague.
        </p>
    }


    @if (Model.FirstDayOfSchool == true)
    {
        <p>
            Your first day of school.
        </p>
        <p>
            Your favorite class.
        </p>
        <p>
            Your favorite teacher.
        </p>
    }


