@model Stemma.Models.WorldEvent
<link href="~/Content/detailsCSS.css" rel="stylesheet" />
@{
    ViewBag.Title = "Suggestions for World Events Stems";
}

<h2>World Events</h2>

<div>
    <h4>Based on your answers, here are some ideas to add to your Stemma:</h4>
    <hr />
    <div class="rowDetails">
        @if (Model.September11 == true)
        {
            <div class="col-md-4">
                <div class="thumbnail">
                    <h4>You remember September 11, 2001. Do you...</h4>
